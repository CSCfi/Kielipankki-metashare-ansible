LoadModule wsgi_module modules/mod_wsgi.so

WSGIRestrictEmbedded On

<VirtualHost *:80>
 ServerAdmin ling-admin@listat.csc.fi
 DocumentRoot "{{ metashare_home }}/metashare"
 Alias /static/ "{{ metashare_home }}/metashare/static/"
 Alias /favicon.ico "{{ metashare_home }}/metashare/static/metashare/images/favicon.ico"

 <Directory "{{ metashare_home }}/metashare/static/">
        Require all granted
 </Directory>
 <Directory "{{ metashare_home }}/metashare">
        Require all granted
 </Directory>

# WSGIDaemonProcess metashare processes=2 threads=3 display-name=%{GROUP} virtualenv={{ metashare_home }}/venv python-path={{ metashare_home }}
# WSGIDaemonProcess metashare processes=2 threads=3 display-name=%{GROUP} python-home={{ metashare_home }}
# WSGIDaemonProcess metashare processes=2 threads=3 display-name=%{GROUP} python-path={{ metashare_home }}:{{ metashare_home }}/venv/lib/python2.7/site-packages
  WSGIDaemonProcess metashare processes=2 threads=3 display-name=%{GROUP} python-home={{ metashare_home }}/venv
 WSGIProcessGroup metashare
 WSGIScriptAlias / {{ wsgi_conf }}
</VirtualHost>
